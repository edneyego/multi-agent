  "capabilities": {
    "streaming": true,
    "push_notifications": true
  },
  "defaultInputModes": ["text"],
  "defaultOutputModes": ["text"],
  "skills": [
    {
      "id": "weather_query",
      "name": "Query Weather",
      "description": "Returns current weather for a city. Input text like: 'clima em SÃ£o Paulo'",
      "tags": ["weather", "open-meteo", "public-api"]
    }
  ],
  "endpoints": {
    "rpc": "/a2a"
  }
}
